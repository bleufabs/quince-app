{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run API (watch)",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/QuinceBackend"
      },
      "command": "dotnet watch run",
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "Serve frontend (simple)",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "command": "python -m http.server 5500",
      "detail": "Requires Python; alternatively use the Live Server extension."
    }
  ]
}