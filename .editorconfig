# top-most EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown: keep trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false

# C# source
[*.{cs,csx}]
indent_size = 4
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true
csharp_new_line_before_open_brace = all
csharp_indent_case_contents = true
csharp_preferred_modifier_order = public,private,protected,internal,static,readonly,extern,volatile,async # suggestion
csharp_prefer_braces = true:suggestion

# JSON & config files
[*.{json,jsonc,editorconfig}]
indent_size = 2

# CSS/HTML/JS in frontend
[*.{html,css,js}]
indent_size = 2

# YAML (GitHub Actions, etc.)
[*.yml]
indent_size = 2
